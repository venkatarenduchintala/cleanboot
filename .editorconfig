root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,kt,groovy,gradle,kts}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{xml,xsd,wsdl,xsl}]
indent_style = space
indent_size = 2
max_line_length = 120

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.properties]
indent_style = space
indent_size = 2

[*.{tex,sty,cls,dtx,ins}]
indent_style = space
indent_size = 2
max_line_length = off

[*.{bib,bibtex}]
indent_style = space
indent_size = 2
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
